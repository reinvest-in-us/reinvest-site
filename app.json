{
  "name": "Be Heard",
  "env": {
    "LANG": {
      "value": "en_US.UTF-8"
    },
    "RACK_ENV": {
      "value": "production"
    },
    "RAILS_ENV": {
      "value": "production"
    },
    "RAILS_LOG_TO_STDOUT": {
      "value": "enabled"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "value": "enabled"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    {
      "plan": "heroku-postgresql",
      "as": "test_db"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}