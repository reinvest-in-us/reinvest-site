<div class="container">
  <%= form_for @district, url: @district.persisted? ? admin_police_district_path(@district) : admin_police_districts_url do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :timezone %>
      <%= f.select :timezone, options_for_select(PoliceDistrict::TIME_ZONE_OPTIONS, (@district.timezone || PoliceDistrict::TIME_ZONE_OPTIONS.first)) %>
    </div>

    <div class="form-group">
      <%= f.label :fy_2019_policing_budget, 'FY2019 Budget' %>
      <%= f.number_field :fy_2019_policing_budget %>
    </div>

    <div class="form-group">
      <%= f.label :total_city_budget, 'Total City Budget' %>
      <%= f.number_field :total_city_budget %>
    </div>

    <div class="form-group">
      <%= f.label :general_fund_percent, 'General Fund Percent' %>
      <%= f.number_field :general_fund_percent %>
    </div>

    <div class="form-group">
      <%= f.label :decision_makers, 'Decision makers' %>
      <%= f.text_field :decision_makers, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :how_to_comment, 'How to comment' %>
      <%= f.text_area :how_to_comment, class: 'form-control' %>
    </div>

    <%= f.submit  %>
  <% end %>
</div>
